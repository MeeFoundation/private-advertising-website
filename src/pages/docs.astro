---
import { Header } from "mee-components";
import { header, meeFoundation } from "../config";
import Layout from "../layouts/Layout.astro";
import { DocsComponent, Breadcrumbs } from "mee-components";
const data = {
  users: {
    title: "Users",
    enabled: true,
    link: "/docs/users/private-advertising",
    description:
      "Click below to learn more about our private advertising project.",
  },
  publishers: {
    title: "Publishers",
    description:
      "Our goal is that publishers and small and medium sized businesses can increase their ad revenue by adding support for a new Mee-compatible ad network.",
    enabled: true,
    link: "/docs/publishers/private-advertising",
  },
  developers: {
    title: "Developers",
    enabled: true,
    description:
      "Our development work on private advertising is its early stages. We will soon be reaching out to entrepreneurs and developers interested in developing a new Mee-compatible ad network.",
    link: "/docs/developers/private-advertising",
  },
};
---

<Layout title="Docs">
  <main class="">
    <Header header={header} activePage="docs" location="Private Advertising" />
    <article
      class="relative mt-27 flex h-full min-h-screen w-screen flex-col items-center gap-4 overflow-hidden pt-16 dark:bg-darky"
    >
      <Breadcrumbs
        className="hidden md:flex"
        breadcrumbs={[
          { title: "Projects", link: `${meeFoundation}projects/` },
          { title: "Private Advertising", link: `/` },
          { title: "Docs" },
        ]}
      />
      <DocsComponent data={data} title="Private Advertising Docs" />
    </article>
  </main>
</Layout>
